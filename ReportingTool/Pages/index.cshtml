@page
@model Reportingtool.Pages.IndexModel

@{
    ViewData["Title"] = Model.Current_User + " - CVXRT";
}

<!-- Full Page Intro -->
<div class="view full-page-intro" style="background-image: url('Images/gorgon-plant-site-aerial-d-crop.jpg'); background-repeat: no-repeat; background-size: cover;">
    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-lighter d-flex justify-content-center align-items-center">

        <!-- Content -->
        <div class="container">

            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-md-6 mb-4 white-text text-center text-md-left">
                    <div style="background: rgba(0,0,0,0.4); padding: 2.5rem;">
                        <h1 class="font-weight-bold">Plan, Collect, Diagnose.</h1>

                        <hr class="hr-light">

                        <p>
							<strong>Manage and monitor asset health.  This is a buzz word collection, send help. </strong>
                        </p>

                        <p class="mb-4 d-none d-md-block">
							<strong>
								Maintenance planning and review. Condition monitoring and diagnostic reporting.
								Standardise and optimise collection. Predictive maintenance, increased performance.  
								Detect early signs of deterioration.  Manage and monitoring asset health.
							</strong>
                        </p>
                        <a target="_blank" class="btn btn-indigo btn-lg" asp-page="/404"> 
                            Start tutorial
                            <i class="fas fa-graduation-cap ml-2"></i>
                        </a>
                    </div>



                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 col-xl-5 mb-4">

                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-body">

                            <!-- Form -->
                            <form name="">
                                <!-- Heading -->
                                <h3 class="dark-grey-text text-center">
                                    <strong>Write to us:</strong>
                                </h3>
                                <hr>

                                <div class="md-form">
                                    <i class="fas fa-user prefix grey-text"></i>
                                    <input type="text" id="form3" class="form-control">
                                    <label for="form3">Your name</label>
                                </div>
                                <div class="md-form">
                                    <i class="fas fa-envelope prefix grey-text"></i>
                                    <input type="text" id="form2" class="form-control">
                                    <label for="form2">Your email</label>
                                </div>

                                <div class="md-form">
                                    <i class="fas fa-pencil-alt prefix grey-text"></i>
                                    <textarea type="text" id="form8" class="md-textarea"></textarea>
                                    <label for="form8">Your message</label>
                                </div>

                                <div class="text-center">
                                    <button class="btn btn-indigo">Send</button>
                                </div>

                            </form>
                            <!-- Form -->

                        </div>

                    </div>
                    <!--/.Card-->

                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->

        </div>
        <!-- Content -->

    </div>
    <!-- Mask & flexbox options-->

</div>
<!-- Full Page Intro -->

<main>

    <!--Main layout-->
    <div class="container">




        <!--Second row-->
        <div class="row py-5">
            <!--First columnn-->
            <div class="col-lg-4">
                <!--Card-->
                <div class="card wow fadeIn" data-wow-delay="0.2s">

                    <!--Card image-->
                    <img class="img-fluid" src="Images/gorgon-plant-site-d-s.jpg"
                         alt="Card image cap">

                    <!--Card content-->
                    <div class="card-kpi card-body">
                        <!--KPI-->
                        <h1 class="font-weight-bold">12</h1>
                        <!--Title-->
                        <h4 class="card-title">Routes Remaining</h4>
                        <!--Text-->
                        <p class="card-text">
                            14 hours remaining in the schedule for this week. Shift your workload or confirm your routes.
                        </p>
                        <a class="btn btn-info" asp-page="/ScheduleMaintenance">Schedule Work</a>
                    </div>

                </div>
                <!--/.Card-->
            </div>
            <!--First columnn-->
            <!--Second columnn-->
            <div class="col-lg-4">
                <!--Card-->
                <div class="card wow fadeIn" data-wow-delay="0.4s">

                    <!--Card image-->
                    <img class="img-fluid" src="Images/DC_2317_c.jpg"
                         alt="Card image cap">


                    <!--Card content-->
                    <div class="card-kpi card-body">
                        <!--KPI-->
                        <h1 class="font-weight-bold">27</h1>
                        <!--Title-->
                        <h4 class="card-title">Machines to Verify</h4>
                        <!--Text-->
                        <p class="card-text">
                            5 Routes have been completed.  Verify whether these machines have been missed or require reporting for this survey.
                        </p>
                        <a class="btn btn-info" asp-page="/CreateReports">Raise Reports</a>
                    </div>

                </div>
                <!--/.Card-->

            </div>
            <!--Second columnn-->
            <!--Third columnn-->
            <div class="col-lg-4">
                <!--Card-->
                <div class="card wow fadeIn" data-wow-delay="0.6s">

                    <!--Card image-->
                    <img class="img-fluid" src="Images/gorgon-cargo-copy-s.jpg"
                         alt="Card image cap">

                    <!--Card content-->
                    <div class="card-kpi card-body">
                        <!--KPI-->
                        <h1 class="font-weight-bold">3</h1>
                        <!--Title-->
                        <h4 class="card-title">Reports In Progress</h4>
                        <!--Text-->
                        <p class="card-text">
                            8 Reports are currently in progress.  Record observations, analysis outcomes and recommendations.
                        </p>
                        <a class="btn btn-info" asp-page="/ReviewReports">Complete Analysis</a>
                    </div>

                </div>
                <!--/.Card-->
            </div>
            <!--Third columnn-->
        </div>
        <!--/.Second row-->
        <hr class="extra-margins">
        <!--First row-->
        <div class="row wow fadeIn" data-wow-delay="0.2s">
            <div class="col-md-12 py-5">
                <div class="jumbotron">
                    <h2 class="h2-responsive">View KPI Reports</h2>
                    <br>
                    <p>Better yet, let's insert an iFrame here</p>
                    <hr>
                    <p>Would be nice if we could put an iframe in to show all 3 pages.</p>
                    <a target="_blank" class="btn btn-outline-unique" rel="nofollow">
                        Workload
                        <i class="fas fa-download right"></i>
                    </a>
                    <a target="_blank" class="btn btn-unique btn-ptc"
                       rel="nofollow">Compliance <i class="fas fa-book right"></i></a>
                    <a target="_blank" class="btn btn-outline-unique" rel="nofollow">
                        Vulnerabilities
                        <i class="fas fa-download right"></i>
                    </a>

                </div>
            </div>
        </div>
        <!--/.First row-->

    </div>
    <!--/.Main layout-->

</main>